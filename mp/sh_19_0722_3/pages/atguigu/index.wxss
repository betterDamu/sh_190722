@import "./template/template.wxss";
/* 全局样式 */
page{
  width: 100%;
  height: 100%;
  overflow: auto;
}
.wrap{
  background: rgb(247,247,247)
}
/* 头部区域 */
.wrap .header{
  height: 113rpx;
}
.wrap .header image{
  width: 100%;
  height: 100%
}

/* 轮播区域 */
.wrap swiper{
  height: 375rpx;
}
.wrap swiper swiper-item image{
  width: 100%;
  height: 100%
}

/* 导航区域 */
.wrap .navs{
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
  background: white
}
.wrap .navs .title{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:33rpx;
  padding-bottom:38rpx; 
}
.wrap .navs .title text:nth-child(1){font-size: 44rpx;margin-bottom: 20rpx;}
.wrap .navs .title text:nth-child(2){font-size: 29rpx;}
.wrap .navs .course{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.wrap .navs .course .item{
  display: flex;
  flex-direction: column;
  align-items: center
}
.wrap .navs .course .item image{
  width: 122rpx;
  height: 122rpx;
}
.wrap .navs .course .item text{
  font-size: 30rpx;
}


/* 底部区域 */
.footer{
  display: flex;
  height: 330rpx;
  background: rgb(51, 51, 51);
  overflow: hidden;
  color: white;
  margin-top: 30rpx;
}
.footer .left{
  box-sizing:border-box;
  padding: 20rpx 20rpx 0 20rpx;
  width: 264rpx;
  display: flex;
  flex-direction: column;
  align-items: center
}
.footer .left image{
  width: 100%
}
.footer .left text{
  text-align: center
} 
.footer .right{
  box-sizing:border-box;
  padding: 15rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.footer .right text{
  font-size: 27rpx;
}
.footer .right .r_top,.footer .right .r_bottom{
  display: flex;
  flex-direction: column
}